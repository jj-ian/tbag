room {}

room Closet { 
	name = "Closet";
}

room Bedroom {
	name = "Bedroom";
}

Closet <-> Bedroom;

start { Closet }

npc {
	string name;
	string roomName;
	int hunger; 
}

npc Cat {
	name = "Tubbs";
	roomName = "Bedroom";
	hunger = 5;
}

true {
	printCurrentRoomInfo();
	getInputAdjacentRooms(Outside);
	->input
}

currentRoom.name ~~ Cat.roomName {
	print("you got eaten by the cat.\n");
	endgame;
}

func void printCurrentRoomInfo() {
	print("Currently in: ");
	print(currentRoom.name);
	print("\n");
}
