func boolean letterIsInAnswer(string letter) {
	int i = 0;
	boolean found = false;
	while (i < arrLen(answer) AND found == false) {
		if (answer[i] ~~ letter) {
			found = true;
		} else {}
		i = i + 1;
	}
	return found;
}

